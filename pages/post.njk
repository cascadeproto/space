<h1>All Blog Posts</h1>

<ul class="archive">
{%- for post in collections.allarticles -%}
  <li>
    <span>{{ post.date.toLocaleDateString() }}</span>
    <a href="{{ post.url }}">{{ post.data.title | safe }}</a>
  </li>
{%- endfor -%}
</ul>